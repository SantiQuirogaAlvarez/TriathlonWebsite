---



<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>CU Triathlon Club</title>
  </head>
    <Header />

  <!-- Coaches Section -->
  <main class="max-w-7xl mx-auto px-4 py-16 space-y-28">

    <!-- Coaches Section -->
    <section id="coaches">
        <h2 class="text-4xl font-bold mb-12 text-center text-(--gold)">Coaches</h2>

        <div class="flex flex-col items-center gap-12">
        {coaches.map((coach) => (
            <div class="bg-(--light_gray) border border-(--gold) rounded-2xl p-8 text-center max-w-md w-full mx-auto shadow-md">
            <img
                src={coach.photo}
                alt={coach.name}
                class="w-44 h-44 mx-auto rounded-full object-cover mb-6 border-4 border-(--gold)"
            />

            <h3 class="text-2xl font-bold text-(--gold) mb-1">{coach.name}</h3>
            <p class="text-(--dark_gray) font-semibold mb-4">{coach.title}</p>
            <div class="space-y-2">
                <p class="text-sm"><strong>Education:</strong> {coach.education}</p>
                <p class="text-sm mb-4"><strong>Years on Team:</strong> {coach.yearsOnTeam}</p>
            </div>

            <div class="text-sm space-y-4 text-(--dark_gray)">
                {coach.qa?.map((item) => (
                <p>
                    <strong class="text-(--gold)">{item.question}</strong><br />
                    {item.answer}
                </p>
                ))}
            </div>
            </div>
        ))}
        </div>
    </section>

    <!-- Team Leadership Section -->
    <section id="leadership">
        <h2 class="text-4xl font-bold mb-12 text-center text-(--gold)">Team Leadership</h2>

        <div class="flex flex-col items-center gap-12">
        {leaders.map((leader) => (
            <div class="bg-(--dark_gray) border border-(--gold) rounded-2xl p-8 text-center max-w-md w-full mx-auto shadow-md">
            <img
                src={leader.photo}
                alt={leader.name}
                class="w-44 h-44 mx-auto rounded-full object-cover mb-6 border-4 border-(--gold)"
            />

            <h3 class="text-2xl font-bold text-(--gold) mb-1">{leader.name}</h3>
            <p class="text-(--dark-gray) font-semibold mb-4">{leader.title}</p>

            <div class="space-y-2">
                <p class="text-sm"><strong>Year:</strong> {leader.year}</p>
                <p class="text-sm"><strong>Major:</strong> {leader.major}</p>
                <p class="text-sm"><strong>Hometown:</strong> {leader.hometown}</p>
                
                <p class="text-sm mb-4"><strong>Describe your job in three words:</strong> <p class="text-(--gold)">{leader.threeWords}</p><br /></p>
            </div>

            <div class="text-sm space-y-4 text-(--dark-gray)">
                {leader.qa?.map((item) => (
                <p>
                    <strong class="text-(--gold)">{item.question}</strong><br />
                    {item.answer}
                </p>
                ))}
            </div>
            </div>
        ))}
        </div>
    </section>


    </main>
    
    <Footer/>
</html>
